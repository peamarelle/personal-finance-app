{
  "openapi": "3.0.0",
  "info": {
    "title": "API Rest base repo",
    "description": "This is a api base to start new projects",
    "contact": {
      "email": "peamarelle@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Development"
    },
    {
      "url": "https://node-06-apirest.herokuapp.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "money",
      "description": "Money operations"
    }
  ],
  "paths": {
    "/money": {
      "get": {
        "tags": [
          "transactions"
        ],
        "summary": "Get all transactions",
        "description": "You can get all money transactions\n",
        "responses": {
          "200": {
            "description": "Tractions array list in JSON format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "transactions"
        ],
        "summary": "Create a new transaction",
        "description": "Adds a new transaction to system",
        "operationId": "addInventory",
        "requestBody": {
          "description": "New transaction to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transaction created"
          }
        }
      }
    },
    "/money/{id}": {
      "put": {
        "tags": [
          "transactions"
        ],
        "summary": "update transaction",
        "description": "You can update aspecific transaction\n",
        "parameters": {
          "in": "path",
          "name": "id",
          "required": "true"
        },
        "responses": {
          "200": {
            "description": "Transaction in JSON format",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "transactions"
        ],
        "summary": "delete transaction by id",
        "description": "You can delete aspecific transaction\n",
        "parameters": {
          "in": "path",
          "name": "id",
          "required": "true"
        },
        "responses": {
          "200": {
            "description": "Transaction in JSON format",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transaction": {
        "required": [
          "id",
          "concept",
          "amount",
          "date",
          "transactionType"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "UUID",
            "format": "String",
            "example": "9b1deb4d-3b7d-4bad-9bdd-2b0d7b3dcb6d"
          },
          "concept": {
            "type": "String",
            "example": "payment"
          },
          "amount": {
            "type": "number",
            "example": 2000.70
          },
          "date": {
            "type": "Date",
            "example": "Thu Apr 01 2021 13:16:00"
          },
          "transactionType": {
            "type": "String",
            "example": "icome"
          }
        }
      }
    }
  }
}